import turtle

def узор(n):
    for x in range(180):
        t.pencolor(colors[x%6]) #цвет пера равен порядковому номеру списка
        t.width(x/100+1)        #задаем постепенное увеличение ширины пера
        t.forward(x*n)            #движение пера вперед на х пикселей
        t.right(59)             #поворот пера на 59 градусов

screen=turtle.Screen()
screen.tracer(0) #удаляет анимацию вычерчивания и показывает сразу результат
t=turtle.Pen()
#turtle.speed(10) #задает скорость вычерчивания (анимации)
#turtle.delay(0)  #задает задержку между движениями пера (=0 без задерржек)
turtle.bgcolor("black")
t.hideturtle()    #скрыть черепашку
colors=["red", "purple", "blue", "green", "yellow", "orange"] #создали переменную равную списку цветов
n=0.5               #ввели переменную для функции узор, которая является коэффициентом для движения forward(х)
v=0.08              #ввели переменную-шаг для коэффициента n (чтобы картинка плавно увеличивалась/уменьшалась)
for g in range(96):
    t.clear()       #очищает предыдущую прорисовку для создания эффекта движения
    узор(n)         #запускает функцию Узор с параметром n
    t.penup()       #поднимает перо
    t.home()        #возвращает перо в начальное положение
    t.right(g+25)   #разворачивает перо на определенный градус вправо
    t.pendown()     #опускает перо
    screen.update() #обновляет экран чтобы не было видно результат прорисовки каждого цикла
    n=n+v
    if (n>1.46 or n<0.58): #создаем условие при котором изображение начнет уменьшаться и/или увеличиваться
        v=-v                #меняет знак шага для смены увеличения на уменьшение (и наоборот)
turtle.exitonclick()
